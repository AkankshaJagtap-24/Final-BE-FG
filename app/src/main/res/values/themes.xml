<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FloodGuard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_600</item>
        <item name="colorPrimaryVariant">@color/cyan_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_400</item>
        <item name="colorSecondaryVariant">@color/cyan_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_950</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_950</item>
    </style>

    <style name="Theme.FloodGuard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FloodGuard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FloodGuard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

